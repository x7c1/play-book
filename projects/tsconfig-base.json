{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "es2017"],
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir" : "dist",
    "target": "es5"
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}
